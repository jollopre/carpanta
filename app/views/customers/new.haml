%h2{ class: 'content-head is-center' }= 'New Customer'

%div{ class: 'pure-g' }
  %div{ class: 'pure-u-1 l-box-lrg' }
    %form{ action: '/customers', method: :post, class: 'pure-form pure-form-stacked' }
      %fieldset
        %div{ class: 'pure-control-group' }
          %label{ for: 'name' } Name
          %input{ type: 'text', id: 'name', name: 'customer[name]' }
        %div{ class: 'pure-control-group' }
          %label{ for: 'surname' } Surname
          %input{ type: 'text', id: 'surname', name: 'customer[surname]' }
        %div{ class: 'pure-control-group' }
          %label{ for: 'email' } Email
          %input{ type: 'email', id: 'email', name: 'customer[email]' }
        %div{ class: 'pure-control-group' }
          %label{ for: 'phone' } Phone
          %input{ type: 'tel', id: 'phone', name: 'customer[phone]' }
        %div{ class: 'pure-controls' }
          %a{ href: '/customers', class: 'pure-button' } Cancel
          %input{ type: 'submit', class: 'pure-button', value: 'Create' }
