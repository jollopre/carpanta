%div{ class: 'pagehead' }
  %h1{ class: 'text-gold float-left' } New Customer
%div{ class: 'clearfix' }
%div{ class: 'col-12 col-sm-12 col-md-8 col-lg-6 float-left' }
  %div{ class: 'Box rounded-0 bg-gray-dark border-gold' }
    %div{ class: 'Box-body' }
      %form{ action: '/customers', method: :post }
        %div{ class: form_errors.with_error_class(id: :name, html_class: 'form-group mb-4') }
          %div{ class: 'form-group-header' }
            %label{ for: 'name', class: 'text-gold' } Name
          %div{ class: 'form-group-body' }
            %input{ class: 'form-control', type: :text, id: :name, name: 'customer[name]', value: values[:name] }
          - if form_errors.errors?(:name)
            %p{ form_errors.with_error_entries(:name) }
              = form_errors.errors_to_sentence(:name)
        %div{ class: form_errors.with_error_class(id: :surname, html_class: 'form-group mb-4') }
          %div{ class: 'form-group-header' }
            %label{ for: 'surname', class: 'text-gold' } Surname
          %div{ class: 'form-group-body' }
            %input{ class: 'form-control', type: :text, id: :surname, name: 'customer[surname]', value: values[:surname] }
          - if form_errors.errors?(:surname)
            %p{ form_errors.with_error_entries(:surname) }
              = form_errors.errors_to_sentence(:surname)
        %div{ class: form_errors.with_error_class(id: :email, html_class: 'form-group mb-4') }
          %div{ class: 'form-group-header' }
            %label{ for: 'email', class: 'text-gold' } Email
          %div{ class: 'form-group-body' }
            %input{ class: 'form-control', type: :email, id: :email, name: 'customer[email]', value: values[:email] }
          - if form_errors.errors?(:email)
            %p{ form_errors.with_error_entries(:email) }
              = form_errors.errors_to_sentence(:email)
        %div{ class: form_errors.with_error_class(id: :phone, html_class: 'form-group mb-4') }
          %div{ class: 'form-group-header' }
            %label{ for: 'phone', class: 'text-gold' } Phone
          %div{ class: 'form-group-body' }
            %input{ class: 'form-control', type: :tel, id: :phone, name: 'customer[phone]', value: values[:phone] }
          - if form_errors.errors?(:phone)
            %p{ form_errors.with_error_entries(:phone) }
              = form_errors.errors_to_sentence(:phone)
        %div{ class: 'form-actions mb-4' }
          %button{ type: 'submit', class: 'btn bg-gold' } Create
          %a{ href: '/customers', class: 'btn bg-gold' } Cancel
